
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Bookmark</h3>
  </div>
  <div class="panel-body">
    <% if @bookmark.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this
        bookmark from being saved:</h2>
       <ul>
          <% @bookmark.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
           <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for @bookmark do |f| %>
      <%= f.label :title %> <br>
      <%= f.text_area :title %>
      <br>
      <%= f.label :url %> <br>
      <%= f.text_area :url %>
      <br>
      <%= f.label :category %> <br>
      <%= f.select :category, Bookmark::CATEGORIES %>
      <br>
      <%= f.label :is_favorite %> <br>
      <%= f.check_box :is_favorite %>
      <br>
      <%= f.label :comment %> <br>
      <%= f.text_area :comment %>
      <br>
      <%= f.submit %>
    <% end %>
  </div>
</div>
